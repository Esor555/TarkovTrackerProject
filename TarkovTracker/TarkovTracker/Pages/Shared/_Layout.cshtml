@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TarkovTracker</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&display=swap" rel="stylesheet" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TarkovTracker.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Oswald', sans-serif;
            background-color: #1c1f1c;
            color: #e0e0e0;
        }

        .tarkov-navbar {
            background-color: #2c3e2f;
            border-bottom: 2px solid #556b2f;
            box-shadow: 0 2px 5px rgba(0,0,0,0.6);
        }

        .tarkov-title {
            font-size: 1.75rem;
            font-weight: bold;
            color: #c0c0a0;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: #dcdccc !important;
        }

        .navbar-nav .nav-link:hover {
            color: #f5f5dc !important;
            text-decoration: underline;
        }

        footer {
            background-color: #2c3e2f;
            color: #a0a0a0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark tarkov-navbar mb-3">
            <div class="container">
                <a class="navbar-brand tarkov-title" asp-area="" asp-page="/Index">TarkovTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Register">Register</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-text text-light">
                    @ViewData["playername"]
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 p-3 text-center">
        <div class="container">
            &copy; 2025 - TarkovTracker - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
