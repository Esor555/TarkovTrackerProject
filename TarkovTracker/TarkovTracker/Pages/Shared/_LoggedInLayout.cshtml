<!DOCTYPE html>
<html lang="en">
<head>
  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TarkovTracker</title>


    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&display=swap" rel="stylesheet" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TarkovTracker.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Oswald', sans-serif;
            background-color: #121212;
            color: #d0d0d0;
        }

        .navbar {
            background-color: #2e3b2f;
            border-bottom: 2px solid #556b2f;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #c0c0a0 !important;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #cfcfcf !important;
            font-weight: 600;
            margin-right: 15px;
        }

        .nav-link:hover {
            color: #f5f5dc !important;
            text-decoration: underline;
        }

        footer {
            background-color: #2e3b2f;
            color: #aaa;
            padding: 1rem;
            border-top: 1px solid #556b2f;
        }

        .navbar-text,
        .navbar-brand:last-child {
            color: #a0f0a0;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TarkovTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var role = (string)ViewData["role"] ?? "user"; // Default to user if not set
                        }
                        @if (role == "admin")
                        {
                            <!-- Admin-specific links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Quest">Manage Quests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Hideout">Manage Hideouts</a>
                            </li>
                        }
                        else
                        {
                            <!-- User-specific links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/User/Quest">My Quests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/User/Hideout">My Hideout</a>
                            </li>
                        }

                        <!-- Shared links -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Logout">Logout</a>
                        </li>
                    </ul>

                </div>
                <div class="navbar-text">
                    @ViewData["playername"]
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - TarkovTracker - <a asp-area="" asp-page="/Privacy" class="text-muted">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
