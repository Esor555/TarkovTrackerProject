@page
@model HideoutModel
@{
	ViewData["Title"] = "Your Hideout";
}

<h1>Your Hideout</h1>

<div class="row">
	@foreach (var station in Model.Stations)
	{
		<div class="col-md-4 mb-3">
			<div class="card border-info shadow">
				<div class="card-body">
					<h5 class="card-title">@station.Name</h5>
					<span class="badge bg-info">Level @station.Level</span>
				</div>
			</div>
		</div>
	}
</div>